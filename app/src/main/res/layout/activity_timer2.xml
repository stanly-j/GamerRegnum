<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Timer2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <NumberPicker
                    android:id="@+id/numberPickerSegundo2"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="170dp"
                    android:theme="@style/NumberPickerText"
                    app:layout_constraintBottom_toTopOf="@+id/btnSig2"
                    app:layout_constraintStart_toEndOf="@+id/textView7" />

                <NumberPicker
                    android:id="@+id/numberPickerMinuto2"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="170dp"
                    android:theme="@style/NumberPickerText"
                    app:layout_constraintBottom_toTopOf="@+id/btnSig2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <NumberPicker
                    android:id="@+id/numberPickerHora2"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="170dp"
                    android:theme="@style/NumberPickerText"
                    app:layout_constraintBottom_toTopOf="@+id/btnSig2"
                    app:layout_constraintEnd_toStartOf="@+id/textView6" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="42dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="64dp"
                    android:layout_marginRight="64dp"
                    android:gravity="center"
                    android:text="H"
                    app:layout_constraintBottom_toTopOf="@+id/numberPickerHora2"
                    app:layout_constraintEnd_toStartOf="@+id/textView4"
                    app:layout_constraintTop_toTopOf="@+id/guideline"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="41dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginEnd="67dp"
                    android:layout_marginRight="67dp"
                    android:gravity="center"
                    android:text="M"
                    app:layout_constraintBottom_toTopOf="@+id/numberPickerMinuto2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="42dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginLeft="64dp"
                    android:gravity="center"
                    android:text="S"
                    app:layout_constraintBottom_toTopOf="@+id/numberPickerSegundo2"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toTopOf="@+id/guideline"
                    app:layout_constraintVertical_bias="0.995" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/numberPickerMinuto2"
                    app:layout_constraintStart_toEndOf="@+id/numberPickerMinuto2"
                    app:layout_constraintTop_toTopOf="@+id/numberPickerMinuto2"
                    app:layout_constraintVertical_bias="0.5" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/numberPickerMinuto2"
                    app:layout_constraintEnd_toStartOf="@+id/numberPickerMinuto2"
                    app:layout_constraintTop_toTopOf="@+id/numberPickerMinuto2"
                    app:layout_constraintVertical_bias="0.5"/>

                <Button
                    android:id="@+id/btnSig2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:onClick="btnSig2"
                    android:text="@string/btnSig2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.802"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btnCancel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:onClick="btnCancel2"
                    android:text="@string/Text_btnCancel"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.181"
                    app:layout_constraintStart_toStartOf="parent" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="44dp"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </ScrollView>


</android.support.constraint.ConstraintLayout>